<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.list.ListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pkmn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/sep_list"
        app:layout_constraintEnd_toStartOf="@+id/container_detail"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/list_item_pkmn" />

    <dev.jameido.pokedex.views.PokeLoader
        android:id="@+id/img_list_loading"
        android:layout_width="@dimen/list_item_loading"
        android:layout_height="@dimen/list_item_loading"
        android:layout_margin="@dimen/spacing_16"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/rv_pkmn"
        app:layout_constraintStart_toStartOf="@+id/rv_pkmn"
        app:layout_constraintTop_toTopOf="@+id/rv_pkmn"
        tools:visibility="visible" />

    <include
        android:id="@+id/container_list_error"
        layout="@layout/layout_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_16"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/rv_pkmn"
        app:layout_constraintStart_toStartOf="@+id/rv_pkmn"
        app:layout_constraintTop_toTopOf="@+id/rv_pkmn"
        app:layout_constraintBottom_toBottomOf="@+id/rv_pkmn"
        tools:visibility="visible" />

    <View
        android:id="@+id/sep_list"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/search_list" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:iconifiedByDefault="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/container_detail"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintStart_toStartOf="parent"
        app:queryHint="@string/search_hint" />

    <FrameLayout
        android:id="@+id/container_detail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/rv_pkmn"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>